<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/employee_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/purple_background"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/employee_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_person_24"
                app:tint="@color/purple_text" />

            <TextView
                android:id="@+id/employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/adamina"
                android:text="Erick Mafole"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/employee_icon"
                app:layout_constraintTop_toTopOf="@+id/employee_icon" />

            <TextView
                android:id="@+id/employee_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/adamina"
                android:text="255743809705"
                android:textColor="@color/purple_text"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/employee_phone_icon"
                app:layout_constraintStart_toEndOf="@+id/employee_phone_icon"
                app:layout_constraintTop_toTopOf="@+id/employee_phone_icon" />

            <ImageView
                android:id="@+id/employee_option_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/employee_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/employee_phone"
                app:srcCompat="@drawable/ic_baseline_more_vert_24" />

            <ImageView
                android:id="@+id/employee_phone_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/employee_name"
                app:layout_constraintTop_toBottomOf="@+id/employee_name"
                app:srcCompat="@drawable/ic_baseline_phone_android_24"
                app:tint="@color/purple_text" />

            <ImageView
                android:id="@+id/employee_store_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/employee_phone_icon"
                app:layout_constraintStart_toEndOf="@+id/employee_phone"
                app:layout_constraintTop_toTopOf="@+id/employee_phone_icon"
                app:srcCompat="@drawable/ic_baseline_store_24"
                app:tint="@color/purple_text" />

            <TextView
                android:id="@+id/employee_store_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/adamina"
                android:text="12"
                android:textColor="@color/purple_text"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/employee_store_icon"
                app:layout_constraintStart_toEndOf="@+id/employee_store_icon"
                app:layout_constraintTop_toTopOf="@+id/employee_store_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>